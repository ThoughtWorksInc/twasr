{
    "apiVersion": "v1",
    "kind": "Pod",
    "metadata": {
        "name": "twasr-service"
    },
    "spec": {
        "containers": [
            {
                "name": "rbd-rw",
                "image": "tongda/twasr-service",
                "volumeMounts": [
                    {
                        "mountPath": "/opt/models",
                        "name": "kaldi_model"
                    }
                ]
            }
        ],
        "volumes": [
            {
                "name": "kaldi_model",
                "rbd": {
                    "monitors": [
        						"10.18.6.1:6789"
    				 ],
                    "pool": "rbd",
                    "image": "kaldi_model",
                    "user": "admin",
                    "secretRef": {
                                     "name": "ceph-secret"
                    },
                    "keyring": "/etc/ceph/ceph.client.admin.keyring",
                    "fsType": "ext4",
                    "readOnly": true
                }
            }
        ]
    }
}